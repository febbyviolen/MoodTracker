<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingBottom="15dp"
    android:background="#EDEDE5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/diaryImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:maxHeight="400dp"
        app:layout_constraintTop_toTopOf="parent"/>
<!--        android:src="@drawable/angry_3"-->
<!--        android:background="#FDF"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/diaryImage"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/emotionImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/ok_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/emotionImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/diaryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="2000년 4월 5일 토요일"
                android:textSize="15sp"
                android:textColor="#555555"/>
            <TextView
                android:id="@+id/diaryContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/diaryDate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                android:text="오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기 오늘의 일기"
                android:textSize="12sp"
                android:textColor="#555555"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>